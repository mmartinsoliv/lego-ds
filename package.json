{
  "name": "root",
  "private": true,
  "scripts": {
    "commit": "git-cz",
    "clean": "lerna clean -y && rm -rf node_modules",
    "reset": "yarn clean && lerna bootstrap",
    "new": "node ./scripts/cli.js",
    "build:tokens": "lerna run build --scope=@lego-ds/tokens --stream",
    "build:components": "lerna run build:prod --scope=@lego-ds/components --stream",
    "dev:react": "yarn build:components && lerna run dev --scope=@lego-ds/lab-react --stream",
    "dev:angular": "yarn build:components && lerna run dev --scope=@lego-ds/lab-angular --stream",
    "dev:vue": "yarn build:components && lerna run dev --scope=@lego-ds/lab-vue --stream",
    "dev:html": "yarn build:components && lerna run dev --scope=@lego-ds/lab-html --stream",
    "dev:components": "lerna run dev --scope=@lego-ds/components --stream"
  },
  "devDependencies": {
    "commitizen": "^4.1.2",
    "cz-conventional-changelog": "^3.2.0",
    "husky": "^4.2.5",
    "lerna": "^3.22.0",
    "shelljs": "^0.8.4"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "react",
      "react-dom",
      "react-scripts",
      "jest",
      "**/@types/**",
      "**/@types*/**"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "",
      "pre-push": ""
    }
  }
}
